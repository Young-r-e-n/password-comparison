package com.company;

import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        String password ;
        int option;
        String preset="0000";
        Scanner input= new Scanner(System.in);

    System.out.println("Enter your password ");
    password=input.next();
    if (password.compareTo(preset)==0 ){
        System.out.println("Choose one of the actions below  \n 1.Option 1 \n 2.Option 2 \n 3.Option 3");
        option= input.nextInt();
        switch (option) {
            case 1 -> System.out.println("You have selected option 1");
            case 2 -> System.out.println("You have selected option 2");
            case 3 -> System.out.println("You have selected option 3");
            default -> System.out.println("You did not choose anything");//0000
        }

        }
    }
}
